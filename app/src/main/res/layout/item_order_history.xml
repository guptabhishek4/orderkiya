<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_deliver_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txt_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_deliver_item"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txt_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_qty"
        android:text="Units"
        android:layout_marginTop="10dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_unit"
        android:layout_marginTop="10dp"
        android:text="Status"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txt_order_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_status"
        android:layout_marginTop="10dp"
        android:text="Order Date"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txt_deliver_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_order_date"
        android:layout_marginTop="10dp"
        android:text="Order Date"
        android:textColor="#000000"/>
</RelativeLayout>